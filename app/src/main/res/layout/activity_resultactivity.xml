<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultactivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/centerlineofresult">
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgui" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:textSize="62sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:id="@+id/resultheading">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Result will be Shown Here"
        android:layout_below="@id/resultheading"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="20dp">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/logoimage"
        android:src="@drawable/logotext"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_above="@id/centerlineofresult">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/centerlineofresult">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/tick"
            android:id="@+id/sign"
            android:layout_marginBottom="20dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESULT :"
            android:paddingTop="40dp"
            android:textSize="44sp"
            android:paddingStart="30dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:paddingTop="40dp"
            android:textSize="44sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:id="@+id/score">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttondesign"
            android:layout_above="@id/restart"
            android:id="@+id/showans">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Show Answers"
                android:textColor="#3a3a3c"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/buttondesign"
            android:layout_alignParentBottom="true"
            android:id="@+id/restart">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Restart Quiz"
                android:textColor="#3a3a3c"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>