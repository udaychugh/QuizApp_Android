<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/actionbar"
        android:background="@drawable/actionbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:id="@+id/backbuttonofrate">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate us | Quizoid"
            android:textColor="#3a3a3c"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="35dp">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_alignParentEnd="true"
            android:id="@+id/morebuttonofrate">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/logoabout"
            android:src="@drawable/logotext"
            android:layout_marginTop="40dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

        </ImageView>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoabout"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:rating="3"
            android:stepSize="1"
            android:id="@+id/ratingbar"
            android:progressTint="#FFD700" />

        <EditText
            android:id="@+id/editmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="textLongMessage"
            android:hint="Enter your message here"
            android:layout_below="@+id/ratingbar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttondesign"
            android:id="@+id/submitfeedback"
            android:layout_marginTop="40dp"
            android:layout_below="@id/editmessage">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Submit Feedback"
                android:textColor="#3a3a3c"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>